<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assembly="ShoppingCartWeb"
				   namespace="ShoppingCartWeb.Models">
	<class name="ProductReservation"
		   table="ProductReservation">
		<id name="Id">
			<generator class="identity"/>
		</id>
    <property name="Count" />

    <many-to-one name="Product"
                 class="Product"
                 column="ProductId"
                 cascade="save-update" />
		<many-to-one name="Cart"
                 class="ShoppingCart"
                 column="CartId"
                 cascade="save-update" />
	</class>
</hibernate-mapping>